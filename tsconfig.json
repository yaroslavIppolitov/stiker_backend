{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": false,
    "types": ["node"]
  },
  "include": ["."],
  "exclude": ["./node_modules", "build"]
}
